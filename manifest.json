{
	"name": "Fullwidth Image",
	"description": "Fullwidth Image plugin makes your image fit to screen.",
	"version": "1.0",
	"manifest_version": 2,
	"homepage_url": "https://github.com/getanwar/fullwidth-image",

	"permissions": [
		"activeTab"
	],

	"background": {
		"scripts": [ "action.js" ],
		"persistent": false
	},

	"browser_action": {
		"default_title": "Fullwidth Image",
		"default_icon": "icon.png"
	}
}